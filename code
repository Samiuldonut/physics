  <script>
    // Navigation & Progress Bar Logic
    const navLinks = document.querySelectorAll('nav a');
    const dayContents = document.querySelectorAll('.dayContent');
    const progressBar = document.getElementById('progress-bar');
    const progressLabel = document.getElementById('progress-label');
    const totalDays = 14;

    function updateProgressBar(dayNumber) {
      if (isNaN(Number(dayNumber))) {
        progressBar.style.width = "0%";
        progressLabel.innerText = "Error Log";
      } else {
        const percentage = (Number(dayNumber) / totalDays) * 100;
        progressBar.style.width = percentage + '%';
        progressLabel.innerText = `Progress: Day ${dayNumber} of ${totalDays}`;
      }
    }

    function showDay(dayNumber) {
      dayContents.forEach(day => day.classList.remove('active'));
      document.getElementById('day' + dayNumber).classList.add('active');

      navLinks.forEach(link => {
        link.classList.toggle('active', link.getAttribute('data-day') === String(dayNumber));
      });

      updateProgressBar(dayNumber);
      localStorage.setItem('activeDay', dayNumber);

      if(dayNumber === "errorLog") {
        loadErrorLogs();
      }
    }

    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const day = link.getAttribute('data-day');
        showDay(day);
      });
    });

    document.addEventListener('DOMContentLoaded', () => {
      const savedDay = localStorage.getItem('activeDay') || '1';
      showDay(savedDay);
      injectSectionTimers(); // Inject timers into every <section>
    });

    // Interactive Series Circuit Calculator for Day 8
    function calculateSeries() {
      const r1 = Number(document.getElementById('resistor1').value);
      const r2 = Number(document.getElementById('resistor2').value);
      const voltage = Number(document.getElementById('voltage').value);
      const totalResistance = r1 + r2;
      const current = voltage / totalResistance;
      document.getElementById('seriesCalcResult').innerText =
        `Total Resistance: ${totalResistance} Ω, Current: ${current.toFixed(2)} A`;
    }

    // Timer Injection & Functionality for Each Section
    function injectSectionTimers() {
      const sections = document.querySelectorAll('main section');
      sections.forEach(section => {
        const timerDiv = document.createElement('div');
        timerDiv.className = 'timer-controls';
        const expectedSeconds = Number(section.getAttribute('data-expected')) || 300;
        timerDiv.innerHTML = `
          Expected Time: <span class="expected-time">${formatTime(expectedSeconds)}</span>
          <button class="start-timer">Start Timer</button>
          <button class="stop-timer" disabled>Stop Timer</button>
          <span class="timer-display">00:00</span>
          <span class="timer-warning"></span>
        `;
        section.insertBefore(timerDiv, section.firstChild);
        let intervalId = null;
        let elapsedSeconds = 0;
        const startBtn = timerDiv.querySelector('.start-timer');
        const stopBtn = timerDiv.querySelector('.stop-timer');
        const timerDisplay = timerDiv.querySelector('.timer-display');
        const warningSpan = timerDiv.querySelector('.timer-warning');

        startBtn.addEventListener('click', () => {
          if (intervalId !== null) return;
          startBtn.disabled = true;
          stopBtn.disabled = false;
          intervalId = setInterval(() => {
            elapsedSeconds++;
            timerDisplay.innerText = formatTime(elapsedSeconds);
            if (elapsedSeconds > expectedSeconds) {
              warningSpan.innerText = "Overtime!";
              timerDisplay.style.color = "red";
            } else {
              warningSpan.innerText = "";
              timerDisplay.style.color = "";
            }
          }, 1000);
        });
        stopBtn.addEventListener('click', () => {
          if (intervalId !== null) {
            clearInterval(intervalId);
            intervalId = null;
            startBtn.disabled = false;
            stopBtn.disabled = true;
          }
        });
      });
    }

    // Helper: Convert seconds to mm:ss format
    function formatTime(seconds) {
      const min = Math.floor(seconds / 60);
      const sec = seconds % 60;
      return (min < 10 ? "0" + min : min) + ":" + (sec < 10 ? "0" + sec : sec);
    }

    // --- Built-in Error Log Functionality ---
    function saveErrorLog() {
      const title = document.getElementById('errorTitle').value.trim();
      const sectionInput = document.getElementById('errorSection').value.trim();
      const description = document.getElementById('errorDescription').value.trim();
      const correction = document.getElementById('errorCorrection').value.trim();
      if (!title || !description) {
        alert("Please fill out at least the error title and description.");
        return;
      }
      const errorLog = {
        id: Date.now(),
        title: title,
        section: sectionInput,
        description: description,
        correction: correction,
        date: new Date().toLocaleString()
      };
      let logs = JSON.parse(localStorage.getItem('errorLogList')) || [];
      logs.push(errorLog);
      localStorage.setItem('errorLogList', JSON.stringify(logs));
      document.getElementById('errorLogForm').reset();
      loadErrorLogs();
    }

    function loadErrorLogs() {
      const logContainer = document.getElementById('errorLogList');
      logContainer.innerHTML = "";
      let logs = JSON.parse(localStorage.getItem('errorLogList')) || [];
      if (logs.length === 0) {
        logContainer.innerHTML = "<p>No errors logged yet.</p>";
        return;
      }
      logs.forEach(log => {
        const logDiv = document.createElement('div');
        logDiv.innerHTML = `
          <strong>${log.title}</strong> <em>(${log.date})</em><br>
          <strong>Section:</strong> ${log.section}<br>
          <strong>Description:</strong> ${log.description}<br>
          <strong>Correction:</strong> ${log.correction}<br>
          <button onclick="deleteErrorLog(${log.id})">Delete</button>
        `;
        logContainer.appendChild(logDiv);
      });
    }

    function deleteErrorLog(id) {
      let logs = JSON.parse(localStorage.getItem('errorLogList')) || [];
      logs = logs.filter(log => log.id !== id);
      localStorage.setItem('errorLogList', JSON.stringify(logs));
      loadErrorLogs();
    }
  </script>
</body>
</html>
